<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:background="@drawable/option_border">
    <ImageView
        android:id="@+id/item_questionoption_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tupian"/>

    <EditText
        android:id="@+id/item_questionoption_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="请输入选项文字"
        android:textColorHint="@color/alpha_25_black"
        android:background="@null"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/item_questionoption_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:layout_gravity="center_vertical"/>

</LinearLayout>